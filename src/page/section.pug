mixin sectionSkeleton(sectionId, title, fixed = false)
  article( id=sectionId class=(fixed ? 'h-screen' : 'min-h-screen' ) )
    section.container.pt-12.mx-auto
      .flex.items-center.justify-between
        h2.text-2xl.uppercase
          a.text-gray-400.border-gray-400( class="hover:border-b" href="#" + sectionId ) #
          |
          |
          = title
        a.text-gray-300.border-b.border-transparent( href="#top" class="" )
          | Back to Top
          |
          i.fa.fa-arrow-up
    if block
      block
